{
	"name": "cc-pulse",
	"version": "1.0.2",
	"description": "A customizable, real-time statusline for Claude Code",
	"type": "module",
	"bin": {
		"cc-pulse": "./dist/cli.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "bun run src/cli.ts",
		"build": "bun build src/cli.ts --outdir dist --target node",
		"build:binary": "bun build src/cli.ts --compile --outfile claude-pulse",
		"test": "bun test",
		"lint": "bunx biome check .",
		"lint:fix": "bunx biome check --write .",
		"setup": "bun run src/setup.ts"
	},
	"keywords": [
		"claude",
		"claude-code",
		"statusline",
		"cli",
		"terminal",
		"anthropic"
	],
	"author": "Alireza",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.3.12",
		"@types/bun": "^1.3.6",
		"@types/node": "^25.0.10",
		"typescript": "^5.7.0",
		"zod": "^4.3.6"
	},
	"engines": {
		"node": ">=18"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ali-nr/claude-pulse"
	}
}
